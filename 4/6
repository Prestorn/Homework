#include <iostream>
#include <string>
using namespace std;

int znach(char a)
{
	if (a == 'I') return 1;
	else if (a == 'V') return 5;
	else if (a == 'X') return 10;
	else if (a == 'L') return 50;
	else if (a == 'C') return 100;
	else if (a == 'D') return 500;
	else if (a == 'M') return 1000;
	else return 0;
}

int main()
{
	setlocale(LC_ALL, "Rus");
	string s;
link:
	int n = 0,c=0;
	cout << "Введите римскую цифру: ";
	cin >> s;
	for (int i = 0; i < s.size(); i++)
	{
		if (znach(s[i]) == 0)
		{
			cout << "Присутствует символ, не соответствующий римским цифрам" << endl;
			goto link;
		}
		else
		{
			if (i != s.size()-1)
			{
				int a = znach(s[i]), a1 = znach(s[i + 1]);
				if (a < a1)
				{
					n -= a;
					c = 1;
				}
				else if (a > a1)
				{
					n += a;
					c = 1;
				}
				else
				{
					n += a;
					c++;
				}
			}
			else
			{
				n += znach(s[i]);
				if (znach(s[i]) == znach(s[i - 1])) c++;
			}
		}
		if (c >= 4)
		{
			cout << "В числе не могут идти подряд больше 3 одинаковых цифр"<<endl;
			goto link;
		}
	}
	cout << "В десятичной системе счисления это число выглядит так: " << n;
	return 0;
}
